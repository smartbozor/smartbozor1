{% extends "layouts/auth.j2" %}

{% block page_content %}
    <table class="table table-hover table-striped">
        <thead>
        <tr class="table-dark">
            <td>{{ _("Avtoturargoh nomi") }}</td>
            <td>{{ _("Avtomabil raqami") }}</td>
            <td>{{ _("To'lov holati") }}</td>
            <td>{{ _("To'lov turi") }}</td>
            <td>{{ _("Kirish vaqti") }}</td>
            <td>{{ _("Chiqish vaqti") }}</td>
            <td>{{ _("Narxi") }}</td>
            <td style="width: 1%"></td>
        </tr>
        </thead>
        <tbody>
        {% for row in object_list %}
            <tr {% if request.GET.hl|default(0)|int == row.id %}class="table-success"{% endif %}>
                <td>{{ row.parking.name }}</td>
                <td>{{ row.number }}</td>
                <td>
                    {% if row.leave_at and row.price == 0 %}
                        <span class="badge bg-success">{{ _("tekin") }}</span>
                    {% elif not row.is_paid %}
                        {% if row.payment_progress > 0 %}
                            <span class="badge bg-info">{{ _("jarayonda") }}</span>
                        {% else %}
                            <span class="badge bg-danger">{{ _("to'lanmagan") }}</span>
                        {% endif %}
                    {% else %}
                        <span class="badge bg-success">{{ _("to'langan") }}</span>
                    {% endif %}
                </td>
                <td>
                    {{ row.payment_method|payment_method_display }}
                </td>
                <td>
                    {{ row.enter_at|localtime|datetime_format }}
                    {% if row.enter_image -%}
                        <a href="{{ row.enter_image.url }}" target="_blank" class="ms-2"><span
                                class="bi bi-card-image"></span></a>
                    {%- endif %}
                </td>
                <td>
                    {% if row.leave_at %}{{ row.leave_at|localtime|datetime_format }}{% else %}-{% endif %}
                    {% if row.exit_image -%}
                        <a href="{{ row.exit_image.url }}" target="_blank" class="ms-2"><span
                                class="bi bi-card-image"></span></a>
                    {%- endif %}
                </td>
                <td>{{ row.price|som }} ({{ row.duration|sec_to_hhmmss }})</td>
                <td class="text-nowrap text-end">
                    {% if not row.is_paid and perms.parking.add_parkingstatus and bazaar.is_allow_cash and row.payment_progress == 0 and row.price > 0 %}
                        <button type="button" data-bs-toggle="modal" data-bs-target="#id-cash-modal"
                                data-title="{{ _("Avtomobil {0}").format(row.number) }}"
                                data-btn_title="{{ _("{0} so'm to'landi").format(row.price|intcomma) }}"
                                data-payment_amount_hide="true"
                                data-status="{{ row.id }}"
                                data-pk="{{ row.id }}"
                                class="btn btn-success btn-sm py-1">
                            <i class="bi bi-cash"></i> {{ _("Naqd") }}
                        </button>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ _("Birorta ham avtomabil topilmadi") }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ bootstrap_pagination(page_obj, extra=request.GET.urlencode()) }}

    {% include "parking/_cash_modal.j2" %}
{% endblock %}

{% block extra_js %}
    <script src="{{ static("js/cash-modal.min.js") }}?{{ STATIC_VERSION }}"></script>
{% endblock %}